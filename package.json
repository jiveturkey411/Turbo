{
  "name": "turbobar",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\" \"npm:dev:app\"",
    "dev:renderer": "vite --port 5173 --strictPort",
    "dev:electron": "tsc -p tsconfig.electron.json --watch",
    "dev:app": "wait-on tcp:5173 dist-electron/electron/main.js && electron .",
    "dev:web": "concurrently -k \"npm:dev:web:renderer\" \"npm:dev:web:api\"",
    "dev:web:renderer": "vite",
    "dev:web:api": "node --watch server/index.mjs",
    "build": "npm run build:renderer && npm run build:electron && electron-builder",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:web": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "electron .",
    "start:web": "node server/index.mjs"
  },
  "dependencies": {
    "@notionhq/client": "^5.9.0",
    "express": "^5.2.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^40.4.0",
    "electron-builder": "^26.7.0",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.turbobar.capture",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "win": {
      "signAndEditExecutable": false
    },
    "directories": {
      "output": "release"
    }
  }
}
